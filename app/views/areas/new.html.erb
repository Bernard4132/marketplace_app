<h1 class="remedy">New Area</h1>
<% if current_user.admin? %>
<%= render 'form', area: @area %>

<div class="container">
	<div class="col-lg-12">
		<h1>Areas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @areas  %> 
  </tbody>
</table>
	</div>
</div>
<br>
<br>
<br>
<% else %>
<h4 style="text-align: center;"> User Not Authorized to take this action. </h4>
<% end %>
